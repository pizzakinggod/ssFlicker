<?xml version="1.0" encoding="utf-8"?>

<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/lp_mp_wc" >
	<LinearLayout
		style="@style/lp_mp_wc"
		android:padding="16dp"
		android:orientation="vertical" >

		<LinearLayout
			style="@style/lp_mp_wc"
			android:orientation="vertical">
			<TextView
				style="@style/lp_mp_wc"
				android:text="@string/volume_media" />
			<SeekBar android:id="@+id/sb_media"
				style="@style/lp_mp_wc"
				android:padding="8dp" />
		</LinearLayout>
	
		<LinearLayout
			style="@style/lp_mp_wc"
			android:orientation="vertical">
			<TextView
				style="@style/lp_mp_wc"
				android:text="@string/volume_ringtone_notification" />
			<SeekBar android:id="@+id/sb_ringtone_notification"
				style="@style/lp_mp_wc"
				android:padding="8dp" />
		</LinearLayout>

		<LinearLayout
			style="@style/lp_mp_wc"
			android:orientation="vertical">
			<TextView
				style="@style/lp_mp_wc"
				android:text="@string/volume_alarm" />
			<SeekBar android:id="@+id/sb_alarm"
				style="@style/lp_mp_wc"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"
				android:paddingRight="8dp" />
		</LinearLayout>

	</LinearLayout>
</ScrollView>
