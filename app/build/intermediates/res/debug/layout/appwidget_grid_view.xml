<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/lp_mp_wc" >

	<LinearLayout
		style="@style/lp_mp_wc"
		android:gravity="center"
		android:paddingLeft="8dp"
		android:paddingTop="16dp"
		android:paddingRight="8dp"
		android:paddingBottom="8dp"
		android:orientation="vertical" >

		<ImageView android:id="@+id/iv_preview_image"
			style="@style/lp_128_96"
			android:paddingLeft="4dp"
			android:paddingTop="4dp"
			android:scaleType="centerInside"
			android:background="@color/appwidget_chooser_background" />

		<LinearLayout
			style="@style/lp_mp_wc"
			android:paddingTop="4dp" >
    
			<TextView android:id="@+id/tv_label"
				style="@style/lp_wc_wc"
				android:layout_weight="1"
				android:gravity="left|center"
				android:maxLines="1"
				android:ellipsize="end"
				android:textSize="12sp"
				android:textColor="?android:textColorPrimary" />
			<TextView android:id="@+id/tv_size"
				style="@style/lp_wc_wc"
				android:gravity="right|center"
				android:maxLines="1"
				android:ellipsize="end"
				android:textSize="12sp" />
		</LinearLayout>

	</LinearLayout>

	<ImageView android:id="@+id/iv_appwidget_icon"
		style="@style/lp_32_32"
		android:layout_marginLeft="8dp"
		android:layout_marginTop="8dp" />

</FrameLayout><!-- From: file:/development/workspace/ssFlicker/app/src/main/res/layout/appwidget_grid_view.xml -->